
[maxscale]
threads=auto
admin_secure_gui=false
admin_host=0.0.0.0

[server1]
type=server
address=db-master-development
port=3306
protocol=MariaDBBackend


[server2]
type=server
address=db-slave-development1
port=3306
protocol=MariaDBBackend

[server3]
type=server
address=db-slave-development2
port=3306
protocol=MariaDBBackend

[server4]
type=server
address=db-slave-development3
port=3306
protocol=MariaDBBackend


[ReplicationMonitor]
type=monitor
module=mariadbmon
servers=server1,server2,server3,server4
user=maxscale_monitor
password=secret
auto_rejoin=true
enforce_read_only_slaves = true


[Read-Write-Service]
type=service
router=readwritesplit
servers=server1,server2,server3,server4
user=maxscale_admin
password=secret
localhost_match_wildcard_host=false

[Read-Write-Listener]
type=listener
service=Read-Write-Service
protocol=MariaDBClient
port=3307
